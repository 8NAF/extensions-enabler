{
	"compilerOptions": {
		"module": "es2022",
		"target": "ES2022",
		"lib": ["ES2022"],
		"sourceMap": true,
		"strict": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"@actions": ["actions/index"],
			"@data-sources": ["data-sources/index"],
			"@commands": ["commands/index"],
			"@core": ["core/index"],
			"@utils/*": ["utils/*"],
			"@types": ["types"],
			"@paths": ["paths"]
		}
	},
	"exclude": ["webpack.config.ts"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
